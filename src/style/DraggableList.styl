@import '@spectrum/spectrum-variables/stylus/spectrum-light.styl'

.draggable-list-view
  width 20%
  min-height 1000px
  border-right $spectrum-alias-border-size-thin solid $spectrum-global-color-grey200
  outline none

.draggable-list-item,
.dragged-item
  background-color $spectrum-global-color-static-white
  border $spectrum-alias-border-size-thin solid $spectrum-global-color-grey200
  border-radius $spectrum-alias-border-corner-radius-regular
  margin 10px 20px
  line-height 2
  text-align left

.dragged-item
  width 300px
  height 35px
  button
    border-color transparent
